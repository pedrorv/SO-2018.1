{
  "extends": ["airbnb-base", "plugin:react/recommended"],
  "env": {
    "browser": true,
    "jest": true
  },
  "plugins": ["react"],
  "rules": {
    "no-console": "off",
    "no-use-before-define": "off",
    "no-nested-ternary": "off",
    "no-mixed-operators": "off",
    "class-methods-use-this": "off",
    "import/no-extraneous-dependencies": "off",
    "no-param-reassign": "off"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
